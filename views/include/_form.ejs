<form action="/api/users" method="POST" id="add_people">
    <div class="form-group">
        <label for="name" class="text-primary">Full Name*</label><br>
        <input type="text" name="name" value="fullName" placeholder="">
    </div>
    <div class="new_people">
        
        <div class="form-group">
            
                <label for="name" class="text-primary">Name with initials*</label>
                <input type="text" name="name" value="nameInitials" placeholder="">
           
                <label for="name" class="text-primary">Preferred / Dispaly Name</label>
                <input type="text" name="name" value="preferedName" placeholder="">
           
        </div>
        <div class="form-group">
            <div>
                <label for="name" class="text-primary">Gender</label>
                <select type="text" name="name" value="Gender" placeholder="">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
           
                <label for="name" class="text-primary">Date of Birth</label>
                <input type="date" name="name" value="dob" placeholder="">
            </div>
        </div>
        <div class="form-group">
            <div>
                <label for="name" class="text-primary">Email</label>
                <input type="text" name="name" value="email" placeholder="">
            
                <label for="name" class="text-primary">Mobile Number</label>
                <input type="number" name="name" value="mobile" placeholder="">
            </div>
        </div>
        <div class="form-group">
            <div>
                <label for="name" class="text-primary">Designation</label>
                <input type="text" name="name" value="designation" placeholder="">
          
                <label for="name" class="text-primary">Employee Type</label>
                <select type="text" name="name" value="employeeType" placeholder="">
                    <option value="full_time">Full Time</option>
                    <option value="part_time">Part Time</option>
                    <option value="contract_basis">Contract Basis</option>
                    <option value="other">Other</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div>
                <label for="name" class="text-primary">Joined Date</label>
                <input type="date" name="name" value="joinedDate" placeholder="">
           
                <label for="name" class="text-primary">Experience</label>
                <select type="text" name="name" value="experience" placeholder="">
                    <option value="1">1 Year</option>
                    <option value="2">2 Years</option>
                    <option value="3">3 Years</option>
                    <option value="3+">3+ Years</option>
                </select>
            </div>
        </div>
        <div class="form-group">
                <label for="name" class="text-primary">Salary</label>
                <input type="number" name="name" value="salary" placeholder="">
        </div>
        <div class="form-group">
            <label for="name" class="text-primary">Personal Notes</label><br>
            <textarea type="text" name="name" value="personalNotes" placeholder=""></textarea>
    </div>
    </div>
    <div >
        <button type="button" class="btn btn-light btn-sm">Cancel</button>
        <button type="button" class="btn btn-primary btn-sm">Add People</button>
    </div>
</form>